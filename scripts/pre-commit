#!/bin/sh
# Pre-commit hook to sync shared files to worker directory
#
# To install: cp scripts/pre-commit .git/hooks/pre-commit

echo "Syncing files to worker directory..."

# Sync prisma schema
cp prisma/schema.prisma worker/prisma/schema.prisma
git add worker/prisma/schema.prisma

# Sync scoring config
if [ -f shared/scoring-config.json ]; then
  cp shared/scoring-config.json worker/shared/scoring-config.json
  git add worker/shared/scoring-config.json
fi

echo "Worker files synced and staged."
